BasedOnStyle: LLVM      # start from stock LLVM

IndentWidth: 2          # 2-space indent
ColumnLimit: 100

NamespaceIndentation: All   # indent code inside namespaces
ReflowComments: false       # keeps banner comments as-is (new key)

BreakBeforeBraces: Attach   # { on the same line for classes/functions

# --- optional helpers (all supported in v18) ---
AllowShortLambdasOnASingleLine: All
AlignConsecutiveDeclarations: false
Cpp11BracedListStyle: false
IncludeBlocks: Preserve

PointerAlignment: Left
